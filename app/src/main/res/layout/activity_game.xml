<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context="sdu.nattadon.animalforfun.Game">

    <ImageView
        android:id="@+id/ImvQuetion"
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/ImbVolum"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:layout_goneMarginTop="@dimen/my_magin"
        app:srcCompat="@drawable/bird_02"
        android:layout_marginTop="12dp"
        app:layout_constraintHorizontal_chainStyle="packed" />

    <ImageButton
        android:id="@+id/ImbVolum"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@null"
        android:onClick="playSound"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/volume"
        app:layout_constraintLeft_toRightOf="@+id/ImvQuetion"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        android:layout_marginTop="62dp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:elegantTextHeight="false"
        android:text="@string/question"
        android:textColor="@android:color/holo_orange_dark"
        android:textSize="@dimen/h1"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_goneMarginTop="@dimen/my_magin"
        app:layout_constraintHorizontal_bias="0.501" />

    <Button
        android:id="@+id/Btn1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Button"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/ImvQuetion"
        app:layout_constraintRight_toLeftOf="@+id/Btn2"
        app:layout_constraintLeft_toLeftOf="parent" />

    <Button
        android:id="@+id/Btn2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Button"
        app:layout_constraintLeft_toRightOf="@+id/Btn1"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/ImvQuetion"
        app:layout_constraintRight_toLeftOf="@+id/Btn3" />

    <Button
        android:id="@+id/Btn3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Button"
        app:layout_constraintLeft_toRightOf="@+id/Btn2"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/ImvQuetion"
        app:layout_constraintRight_toLeftOf="@+id/Btn4" />

    <Button
        android:id="@+id/Btn4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Button"
        app:layout_constraintLeft_toRightOf="@+id/Btn3"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/ImvQuetion"
        app:layout_constraintRight_toRightOf="parent" />
</android.support.constraint.ConstraintLayout>
